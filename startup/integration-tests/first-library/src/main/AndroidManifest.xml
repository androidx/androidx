<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="androidx.startup.first_library">

    <application>

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="merge">
            <!-- This meta-data entry is useful for ComponentInitializer discovery. -->
            <meta-data
                android:name="androidx.startup.first_library.WorkManagerInitializer"
                android:value="@string/androidx_startup" />

            <!-- Remove initializer for WorkManager on-demand initialization -->
            <meta-data
                android:name="androidx.work.WorkManagerInitializer"
                android:value="@string/androidx_startup"
                tools:node="remove" />
        </provider>

    </application>

</manifest>
