<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/main_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_description"
            android:layout_margin="@dimen/main_description_margin"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/push_targets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/push_targets"
            android:layout_margin="@dimen/main_description_margin"
            app:layout_constraintTop_toBottomOf="@id/main_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
    <Button
            android:id="@+id/remove_targets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remove_targets"
            android:layout_margin="@dimen/main_description_margin"
            app:layout_constraintTop_toBottomOf="@id/push_targets"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>