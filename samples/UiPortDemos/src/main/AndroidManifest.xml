<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="com.example.ui.port">

    <application
        android:label="Ui port sample"
        android:supportsRtl="true">

        <activity android:name=".SimpleFlutterActivity"
                  android:configChanges="orientation|screenSize">
            <!--we currently not support multiple FlutterViews, so lets not recreate activity
                on a rotation as the view will also be recreated-->

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>


    </application>
</manifest>
