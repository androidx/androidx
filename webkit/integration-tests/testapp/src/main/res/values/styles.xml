<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="WebkitSwitch" parent="AppTheme">
        <!-- The "thumb" is the piece the user can drag along the "track." -->
        <item name="colorControlActivated">@color/colorActiveSwitchThumb</item>
        <item name="colorSwitchThumbNormal">@color/colorInctiveSwitchThumb</item>
        <item name="android:colorForeground">@color/colorInctiveSwitchTrack</item>
    </style>
    <style name="AppDayNightTheme" parent="Theme.AppCompat.DayNight">
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:isLightTheme">true</item>
    </style>
</resources>
