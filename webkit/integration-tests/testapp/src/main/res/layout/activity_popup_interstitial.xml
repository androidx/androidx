<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_popup_interstitial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/interstitialBackground"
    android:orientation="vertical">

    <TextView
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/warning_message"/>

    <!-- Allow the user to opt into reporting, and to read the corresponding privacy policy -->
    <CheckBox
        android:layout_below="@+id/warning_message"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_report_text"
        android:id="@+id/reporting_checkbox" />
    <TextView
        android:layout_below="@+id/reporting_checkbox"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorLink="@color/linkColor"
        android:id="@+id/privacy_policy" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:background="@color/interstitialButton"
            android:text="@string/back_to_safety_text"/>

        <Button
            android:id="@+id/proceed_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="10dp"
            android:background="@color/interstitialButton"
            android:text="@string/proceed_text"/>

    </LinearLayout>

</RelativeLayout>
